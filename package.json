{
  "name": "stomper",
  "private": true,
  "version": "0.29.0",
  "scheduleVersion": "0.28.6",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail@jonas-thelemann.de>",
  "license": "TODO",
  "type": "module",
  "engines": {
    "node": ">=19"
  },
  "packageManager": "pnpm@7.25.1",
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'nodemon ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "eslint .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks; fi",
    "start": "node ./dist/stomper.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@stomp/stompjs": "6.1.2",
    "camelcase-keys": "8.0.2",
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "html-to-text": "9.0.3",
    "i18next": "22.4.9",
    "i18next-fs-backend": "2.1.1",
    "intl": "1.2.5",
    "moment-timezone": "0.5.40",
    "nodemailer": "6.9.0",
    "pg": "8.8.0",
    "serve-static": "1.15.0",
    "ws": "8.12.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/express": "4.17.15",
    "@types/html-to-text": "9.0.0",
    "@types/i18next-fs-backend": "1.1.2",
    "@types/jest": "29.2.6",
    "@types/node": "18.11.18",
    "@types/nodemailer": "6.4.7",
    "@types/pg": "8.6.6",
    "@types/serve-static": "1.15.0",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "babel-jest": "29.3.1",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "mjml": "4.13.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "shx": "0.3.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "pnpm": {
    "overrides": {
      "dom-serializer": "2.0.0"
    }
  }
}
