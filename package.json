{
  "name": "stomper",
  "version": "0.0.0",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail@jonas-thelemann.de>",
  "license": "TODO",
  "dependencies": {
    "@stomp/stompjs": "^5.4.4",
    "aws-sdk": "^2.656.0",
    "handlebars": "^4.7.6",
    "html-to-text": "^5.1.1",
    "nodemailer": "^6.4.6",
    "websocket": "^1.0.31",
    "snyk": "^1.316.1"
  },
  "devDependencies": {
    "@types/html-to-text": "5.1.1",
    "@types/node": "13.13.12",
    "@types/nodemailer": "6.4.0",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.2.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "mjml": "4.6.3",
    "ts-node-dev": "1.0.0-pre.48",
    "typescript": "3.9.5"
  },
  "scripts": {
    "build": "tsc && find ./src/email-templates/ -maxdepth 1 -type f -name '*.mjml' -exec mjml -o ./src/email-templates/ -r {} \\;",
    "dev": "sh parallel_commands 'tsnd --respawn ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -exec mjml -o ./src/email-templates/ -w {} ;'",
    "start": "yarn run build && node ./dist/stomper.js",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "husky": {
    "hooks": {
      "pre-commit": "find ./src/email-templates/ -maxdepth 1 -type f -name '*.mjml' -print0 | xargs -0 mjml -v {}"
    }
  },
  "snyk": true
}
