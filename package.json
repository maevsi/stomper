{
  "name": "stomper",
  "private": true,
  "version": "1.0.1",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail+maevsi/stomper@jonas-thelemann.de>",
  "license": "TODO",
  "type": "module",
  "engines": {
    "bun": "1.0.15"
  },
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "build": "./scripts/mjml.sh",
    "dev": "sh parallel_commands 'bun run --hot ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "pnpm lint:js && pnpm lint:types",
    "lint:js": "eslint .",
    "lint:types": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "start": "bun ./src/stomper.ts",
    "test": "bun test"
  },
  "dependencies": {
    "@stomp/stompjs": "7.0.0",
    "camelcase-keys": "9.1.2",
    "handlebars": "4.7.8",
    "html-to-text": "9.0.5",
    "i18next": "23.7.7",
    "i18next-fs-backend": "2.3.0",
    "moment-timezone": "0.5.43",
    "nodemailer": "6.9.7",
    "pg": "8.11.3",
    "ws": "8.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/html-to-text": "9.0.4",
    "@types/i18next-fs-backend": "1.1.5",
    "@types/nodemailer": "6.4.14",
    "@types/pg": "8.10.9",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "bun-types": "1.0.12",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "mjml": "4.14.1",
    "prettier": "3.1.0",
    "typescript": "5.3.2"
  },
  "overrides": {
    "dom-serializer": "2.0.0"
  }
}
