{
  "name": "stomper",
  "private": true,
  "version": "0.31.0",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail+maevsi/stomper@jonas-thelemann.de>",
  "license": "TODO",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "packageManager": "pnpm@8.7.4",
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'nodemon ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "pnpm lint:js && pnpm lint:ts",
    "lint:js": "eslint .",
    "lint:ts": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "start": "node ./dist/stomper.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "@stomp/stompjs": "7.0.0",
    "camelcase-keys": "9.0.0",
    "express": "4.18.2",
    "handlebars": "4.7.8",
    "html-to-text": "9.0.5",
    "i18next": "23.4.9",
    "i18next-fs-backend": "2.1.5",
    "intl": "1.2.5",
    "moment-timezone": "0.5.43",
    "nodemailer": "6.9.4",
    "pg": "8.11.3",
    "serve-static": "1.15.0",
    "ws": "8.13.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.15",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@types/express": "4.17.17",
    "@types/html-to-text": "9.0.1",
    "@types/i18next-fs-backend": "1.1.2",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.14",
    "@types/nodemailer": "6.4.9",
    "@types/pg": "8.10.2",
    "@types/serve-static": "1.15.2",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "babel-jest": "29.6.4",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "mjml": "4.14.1",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "pnpm": {
    "overrides": {
      "dom-serializer": "2.0.0"
    }
  }
}
