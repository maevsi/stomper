{
  "name": "stomper",
  "private": true,
  "version": "1.1.3",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail+maevsi/stomper@jonas-thelemann.de>",
  "license": "TODO",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'nodemon ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "pnpm lint:js && pnpm lint:types",
    "lint:js": "eslint .",
    "lint:types": "tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "start": "node ./dist/stomper.js",
    "test": "vitest"
  },
  "dependencies": {
    "@stomp/stompjs": "7.0.0",
    "camelcase-keys": "9.1.3",
    "express": "4.18.2",
    "handlebars": "4.7.8",
    "html-to-text": "9.0.5",
    "i18next": "23.7.20",
    "i18next-fs-backend": "2.3.1",
    "intl": "1.2.5",
    "moment-timezone": "0.5.44",
    "nodemailer": "6.9.8",
    "pg": "8.11.3",
    "serve-static": "1.15.0",
    "ws": "8.16.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/preset-env": "7.23.9",
    "@babel/preset-typescript": "7.23.3",
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@types/express": "4.17.21",
    "@types/html-to-text": "9.0.4",
    "@types/i18next-fs-backend": "1.1.5",
    "@types/node": "18.19.8",
    "@types/nodemailer": "6.4.14",
    "@types/pg": "8.11.0",
    "@types/serve-static": "1.15.5",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vitest": "0.3.20",
    "husky": "9.0.6",
    "mjml": "4.14.1",
    "nodemon": "3.0.3",
    "prettier": "3.2.4",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "1.2.2"
  },
  "pnpm": {
    "overrides": {
      "dom-serializer": "2.0.0"
    }
  }
}
