    "websocket": "1.0.34"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/express": "4.17.12",
    "@types/html-to-text": "8.0.0",
    "@types/i18next-fs-backend": "1.0.0",
    "@types/jest": "26.0.23",
    "@types/markdown-it": "12.0.2",
    "@types/node": "14.17.3",
    "@types/nodemailer": "6.4.2",
    "@types/pg": "8.6.0",
    "@types/serve-static": "1.13.9",
    "@types/websocket": "1.0.2",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "babel-jest": "27.0.2",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "4.3.8",
    "jest": "27.0.4",
    "mjml": "4.10.0",
    "prettier": "2.3.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.3.4"
  },
  "resolutions": {
    "handlebars-i18n/i18next": "20.3.2"
  },
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'tsnd --inspect=0.0.0.0 --respawn ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "eslint .",
    "prepare": "yarn run snyk-protect",
    "snyk-protect": "snyk protect",
    "snyk": "snyk test",
    "start": "yarn run build && node ./dist/stomper.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && find ./src/email-templates/ -maxdepth 1 -type f -name '*.mjml' -print0 | xargs -0 mjml -v {}"
    }
  },
  "snyk": true
}
