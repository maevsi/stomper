{
  "name": "stomper",
  "private": true,
  "version": "1.1.24",
  "main": "stomper.js",
  "repository": "https://github.com/maevsi/stomper.git",
  "author": "Jonas Thelemann <e-mail+maevsi/stomper@jonas-thelemann.de>",
  "license": "TODO",
  "type": "module",
  "engines": {
    "node": "18"
  },
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "tsc && ./scripts/mjml.sh",
    "dev": "sh parallel_commands 'nodemon ./src/stomper.ts' 'find ./src/email-templates/ -maxdepth 1 -type f -name ''*.mjml'' -print0 | xargs -0 mjml -o ./src/email-templates/ -w'",
    "lint": "pnpm lint:js && pnpm lint:types",
    "lint:js": "eslint --cache",
    "lint:types": "tsc --noEmit",
    "lint:fix": "pnpm run lint:js --fix",
    "prepare": "husky",
    "start": "node ./dist/stomper.js",
    "test": "vitest"
  },
  "dependencies": {
    "@stomp/stompjs": "7.0.0",
    "camelcase-keys": "9.1.3",
    "express": "4.21.0",
    "handlebars": "4.7.8",
    "html-to-text": "9.0.5",
    "i18next": "23.15.1",
    "i18next-fs-backend": "2.3.2",
    "intl": "1.2.5",
    "moment-timezone": "0.5.45",
    "nodemailer": "6.9.15",
    "pg": "8.13.0",
    "serve-static": "1.16.2",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-typescript": "7.24.7",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@types/express": "4.17.21",
    "@types/html-to-text": "9.0.4",
    "@types/i18next-fs-backend": "1.1.5",
    "@types/node": "20.16.6",
    "@types/nodemailer": "6.4.16",
    "@types/pg": "8.11.10",
    "@types/serve-static": "1.15.7",
    "@types/ws": "8.5.12",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-vitest": "0.5.4",
    "globals": "15.9.0",
    "husky": "9.1.6",
    "mjml": "4.15.3",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.6.2",
    "typescript-eslint": "8.7.0",
    "vitest": "2.1.1"
  },
  "pnpm": {
    "overrides": {
      "dom-serializer": "2.0.0"
    }
  }
}
